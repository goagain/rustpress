{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug RustPress (Backend)",
      "program": "${workspaceFolder}/target/debug/rustpress",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug"
      },
      "console": "integratedTerminal",
      "sourceLanguages": ["rust"],
      "preLaunchTask": "cargo build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug RustPress Migration",
      "cargo": {
        "args": [
          "build",
          "--bin=rustpress-migrate",
          "--manifest-path=rustpress-migration/Cargo.toml"
        ],
        "filter": {
          "name": "rustpress-migrate",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/rustpress-migration",
      "console": "integratedTerminal",
      "sourceLanguages": ["rust"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Frontend (Main)",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/frontend/node_modules/vite/bin/vite.js",
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Admin Frontend",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/admin-frontend/node_modules/vite/bin/vite.js",
      "cwd": "${workspaceFolder}/admin-frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
    },
    {
      "type": "lldb",
      "request": "attach",
      "name": "Attach to RustPress Process",
      "pid": "${command:pickProcess}",
      "sourceLanguages": ["rust"]
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack (Backend + Frontend)",
      "configurations": [
        "Debug RustPress (Backend)",
        "Debug Frontend (Main)"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Debug Full Stack (Backend + Admin)",
      "configurations": [
        "Debug RustPress (Backend)",
        "Debug Admin Frontend"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 2
      },
      "stopAll": true
    },
    {
      "name": "Debug Full Stack (Backend + Frontend + Admin)",
      "configurations": [
        "Debug RustPress (Backend)",
        "Debug Frontend (Main)",
        "Debug Admin Frontend"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 3
      },
      "stopAll": true
    }
  ]
}
